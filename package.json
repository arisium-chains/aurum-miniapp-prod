{
  "name": "aurum-workspace",
  "version": "1.0.0",
  "description": "Aurum monorepo workspace with ML services, web applications, and shared packages",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "clean": "turbo run clean",
    "type-check": "turbo run type-check",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up",
    "docker:down": "docker-compose down",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up",
    "analyze": "node scripts/analyze-codebase.js",
    "analyze:full": "node scripts/analyze-codebase.js --full",
    "analyze:report": "node scripts/analyze-codebase.js --report-only",
    "backup": "node scripts/backup.js",
    "backup:full": "node scripts/backup.js full",
    "backup:pre-cleanup": "node scripts/backup.js pre-cleanup",
    "backup:list": "node scripts/backup.js list",
    "backup:clean": "node scripts/backup.js clean",
    "cleanup:validate": "node scripts/validate-cleanup.js",
    "workspace:check": "npm ls --workspaces",
    "workspace:install": "npm install --workspaces",
    "workspace:clean": "turbo run clean && npm run clean:node-modules",
    "clean:node-modules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "setup": "npm install && turbo run build",
    "postinstall": "turbo run build --filter=@shared/*"
  },
  "devDependencies": {
    "turbo": "^1.10.0",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "prettier": "^3.0.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.0",
    "chalk": "^4.1.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "monorepo",
    "workspace",
    "ml",
    "face-scoring",
    "typescript",
    "nextjs",
    "rust"
  ],
  "author": "Arisium",
  "license": "MIT"
}
