# Complete ML setup (one command as requested)
setup:
    @echo "ü§ñ Setting up Aurum Circle with ML models..."
    @just check-node
    @just install
    @just setup-ml
    @just setup-env
    @just check-env
    @just show-demo-info
    @echo "üöÄ Starting development server..."
    npm run dev

# Main command - setup and run the miniapp
run:
    @echo "üåü Starting Aurum Circle Miniapp..."
    @just check-node
    @just install
    @just setup-env
    @just check-env
    @just show-urls
    @echo "üöÄ Starting development server..."
    npm run dev

# Start development server
dev:
    @echo "üöÄ Starting development server..."
    npm run dev

# Install dependencies
install:
    @echo "üì¶ Installing dependencies..."
    npm install

# Setup ML models and configuration
setup-ml:
    @echo "ü§ñ Setting up ML models..."
    chmod +x scripts/setup-ml-models.sh
    ./scripts/setup-ml-models.sh
    @echo "‚úÖ ML models configured"

# Test ML model integration
test-ml:
    @echo "üß™ Testing ML models..."
    @echo "Checking model files..."
    @if [ -f "public/models/model_config.json" ]; then echo "‚úÖ Model config found"; else echo "‚ùå Model config missing"; fi
    @echo ""
    @echo "Testing API endpoint..."
    @curl -s http://localhost:3000/api/attractiveness/ml-status | jq . || echo "‚ö†Ô∏è  Server not running. Start with: just dev"
    
# Quick demo test with simulated scoring
test-demo:
    @echo "üéØ Testing attractiveness demo with simulated data..."
    @echo ""
    @echo "Testing scoring API..."
    @curl -s -X POST http://localhost:3000/api/attractiveness/score \
        -H "Content-Type: application/json" \
        -d '{"userId":"demo-user-$$(date +%s)","image":"R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7","nftVerified":true,"wldVerified":true,"useRealML":false}' | \
        jq '.success, .message, .debug.mlMode' || echo "‚ùå Server not running or API failed"
    @echo ""
    @echo "‚úÖ Demo ready! Open: http://localhost:3000/attractiveness-demo"

# Show model information
models:
    @echo "üìä ML Model Information:"
    @echo ""
    @echo "üîç Face Detection: MediaPipe BlazeFace"
    @echo "  ‚Ä¢ Input: 192√ó192 pixels"
    @echo "  ‚Ä¢ Output: Bounding boxes + 6 landmarks"
    @echo "  ‚Ä¢ Location: public/models/face_detection/"
    @echo ""
    @echo "üß† Face Embeddings: ArcFace R100"
    @echo "  ‚Ä¢ Input: 112√ó112 aligned face crop"
    @echo "  ‚Ä¢ Output: 512-dimensional embedding"
    @echo "  ‚Ä¢ Location: public/models/arcface/"
    @echo ""
    @echo "‚öôÔ∏è  Configuration: public/models/model_config.json"
    @echo ""
    @if [ -f "public/models/model_config.json" ]; then echo "‚úÖ Models configured"; else echo "‚ùå Run 'just setup-ml' first"; fi

