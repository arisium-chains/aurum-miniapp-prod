# =========================
# WORLD ID MINIAPP CONFIG
# =========================

# World ID Configuration (REQUIRED)
NEXT_PUBLIC_WORLDCOIN_APP_ID=your_actual_app_id_here
WORLDCOIN_APP_SECRET=your_actual_app_secret_here

# JWT Secret for session management
JWT_SECRET=your_jwt_secret_here

# =========================
# EXTERNAL SERVICES
# =========================

# Redis Configuration
REDIS_URL=redis://redis:6379

# Qdrant Vector Database
QDRANT_HOST=qdrant
QDRANT_PORT=6333

# ML API Service (New Standalone Service)
ML_API_URL=http://ml-api:3000

# Rust ML Services (if used directly by web app, otherwise ML_API_URL is sufficient)
FACE_DETECTION_SERVICE=http://face-detection-service:8001
FACE_EMBEDDING_SERVICE=http://face-embedding-service:8002

# =========================
# BLOCKCHAIN & NFT
# =========================

# Wallet Connect
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=your_project_id_here

# Alchemy API for Ethereum
ALCHEMY_API_KEY=your_alchemy_api_key_here
ALCHEMY_URL=https://eth-mainnet.g.alchemy.com/v2/your_api_key_here

# NFT Contract Address
NFT_CONTRACT_ADDRESS=0xYourNFTContractAddress

# =========================
# API PROTECTION
# =========================

# AI API Protection Key
AI_API_KEY=your_ai_api_key_here

# =========================
# APPLICATION SETTINGS
# =========================

# Environment
NODE_ENV=production

# Next.js Base URL (for server-side fetches)
NEXT_PUBLIC_BASE_URL=http://your-server-ip:3000

# =========================
# DEVELOPMENT ONLY (DO NOT USE IN PRODUCTION)
# =========================

# Debug flags (development only)
# DEBUG=redis*
# TIMING=all